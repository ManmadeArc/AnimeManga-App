{% extends "template.jinja" %}

{% block content %}
 
  <div class="container ">
        <div class= "center-align">
            <br>
            <br>
            <br>
            <br>
            <br>
            {% if results == data %}
                <h5> No hay resultados </h5>
            {% else %}
            
                {% for result in results  %}
                    <a href="/Manga/ReadList/{{result.link.strip()}}" class="{{actual.text_color}}"> 
                    
                    <div class="col s12 m6">
                        <div class="card horizontal">
                                <div class="card-image ">
                                    <img src="{{result.img[0]}}" alt="{{result.title}}" style="max-width: 200%;max-height: 310px;height: fit-content;" />
                                </div>
                            
                                <div class="card-stacked {{actual.bg_1}}">
                            
                                    <div class="card-content {{actual.bg_1}}">
                                        <div class="center-align">
                                            <h6>{{result.title}}</h6>
                                            
                                            <h6>{{result.genre}}</h6>
                                            
                                        
                                        
                                        </div>
                                        </div>
                                        
                                        <div class="card-action center-align">
                                            {% if result.title in Favorites %}
                                                <a href="/Manga/Remove/{{result.title}}">Remove Favorites</a>
                                            {% else %}
                                                <a href="/Manga/Add/{{result.title}}">Add Favorites</a>
                                            {% endif %}
                                        </div>
                                        
                                    
                                    
                                </div>
                        
                        </div>
                        
                    </div>
                    </a>
                    
                {% endfor %}
            {% endif %}
        
        </div>
    </div>

{% endblock  %}